
{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "shell",
		"label": "mpicc build active file",
		"command": "$HOME/mpi/bin/mpicxx",
		"args": [
		  "-std=c++17",
		  "-stdlib=libc++",
		  "-g",
		  "${file}",
		  "-o",
		  "${fileDirname}/${fileBasenameNoExtension}"
		],
		"options": {
		  "cwd": "${workspaceFolder}"
		},
		"problemMatcher": ["$gcc"],
		"group": {
		  "kind": "build",
		  "isDefault": true
		}
	  }
	]
  }